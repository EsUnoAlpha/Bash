# Напишите скрипт который дает студенту 3 секунды чтобы ответить на вопрос "ФИО преподавателя"
# Если он не успевает выводится "Вы отчислены"



#!/bin/bash
if read  -t 3 -p "Кто самый лучший преподаватель по Питону: " name
then
    echo "Да ты прав самый лучший преподаватель $name"
else
    echo "   Ты затупок и ты отчислен"
fi